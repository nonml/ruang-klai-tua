rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function reportVisible(reportId) {
      return exists(/databases/$(database)/documents/reports/$(reportId))
        && get(/databases/$(database)/documents/reports/$(reportId)).data.status in ['PENDING', 'VERIFIED', 'HELD'];
    }

    match /reports/{reportId} {
      allow read: if resource.data.status in ['PENDING', 'VERIFIED', 'HELD'];

      allow create: if signedIn()
        && request.resource.data.owner_uid == request.auth.uid
        && request.resource.data.status in ['PENDING', 'HELD']
        && request.resource.data.confirm_count == 0
        && request.resource.data.flag_count == 0;

      // Client-side confirm/flag is optional. Server API uses Admin SDK and bypasses rules.
      // This rule only allows adding current uid once in confirms/flags map.
      allow update: if signedIn() && (
        (
          !(request.auth.uid in resource.data.confirms.keys())
          && request.auth.uid in request.resource.data.confirms.keys()
          && request.resource.data.confirms[request.auth.uid] == true
          && request.resource.data.confirm_count == resource.data.confirm_count + 1
          && request.resource.data.flags == resource.data.flags
          && request.resource.data.flag_count == resource.data.flag_count
        ) || (
          !(request.auth.uid in resource.data.flags.keys())
          && request.auth.uid in request.resource.data.flags.keys()
          && request.resource.data.flags[request.auth.uid] == true
          && request.resource.data.flag_count == resource.data.flag_count + 1
          && request.resource.data.confirms == resource.data.confirms
          && request.resource.data.confirm_count == resource.data.confirm_count
        )
      );

      allow delete: if false;
    }

    match /attachments/{attachmentId} {
      allow read: if reportVisible(resource.data.report_id);
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    match /rate_limits/{docId} {
      allow read, write: if false;
    }

    match /processed_uploads/{docId} {
      allow read, write: if false;
    }

    match /attachments_pending/{docId} {
      allow read, write: if false;
    }
  }
}
